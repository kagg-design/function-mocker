{
    "name": "lucatume/function-mocker",
    "description": "Function mocking with Patchwork",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "theAverageDev",
            "email": "luca@theaveragedev.com"
        }
    ],
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wordpress/wordpress",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/WordPress/WordPress",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "git",
            "url": "https://github.com/lucatume/coding-standards.git"
        }
    ],
    "require": {
        "php": ">=5.6",
        "ext-json": "^1.6",
        "phpspec/prophecy": "~1.0",
        "antecedent/patchwork": "^2.0",
        "symfony/console": "~3.0",
        "xamin/handlebars.php": "^0.10.4",
        "nikic/php-parser": "~3.0"
    },
    "autoload": {
        "psr-0": {
            "tad\\FunctionMocker": "src"
        },
        "files": [
            "src/tad/FunctionMocker/functions.php",
            "src/tad/FunctionMocker/code-manipulation.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.27",
        "codeception/codeception": "^2.4",
        "wordpress/wordpress": "dev-master",
        "lucatume/coding-standards": "dev-master",
        "friendsofphp/php-cs-fixer": "^2.12"
    }
}
