{
    "name": "lucatume/function-mocker-wp-core-suite-example",
    "description": "An example integration of Function Mocker in the PHPUnit-base WordPress Core suite",
    "type": "project",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "theAverageDev (Luca Tumedei)",
            "email": "luca@theaveragedev.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Examples\\WPCore\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "../../vendor/autoload.php"
        ]
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/WordPress/wordpress-develop.git"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "<6.0",
        "wordpress/wordpress": "*",
        "vlucas/phpdotenv": "^2.5@dev",
        "cweagans/composer-patches": "dev-master"
    },
    "config": {
        "preferred-install": "source"
    },
    "extra": {
        "patches": {
            "wordpress/wordpress": {
                "Do not load the PHPUnit6 compat file while bootstrapping WordPress tests": "tests/_support/wordpress.patch"
            }
        }
    }
}
