<?xml version="1.0"?>
<ruleset name="FunctionMocker">
    <description>PSR2 coding standards with some modifications.</description>

    <rule ref="vendor/lucatume/coding-standards/src/theAverageDev/ruleset.xml"/>

    <rule ref="theAverageDev.Commenting.FileComment">
        <properties>
            <property name="authorName" value="Luca Tumedei"/>
            <property name="authorEmail" value="luca@theaveragedev.com"/>
        </properties>
    </rule>

    <!--exclude some rules for generated WordPress environment files-->
    <rule ref="Squiz.PHP.GlobalKeyword">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Generic.NamingConventions.CamelCapsFunctionName">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="PEAR.Commenting.FunctionComment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.PHP.CommentedOutCode">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Generic.Metrics.CyclomaticComplexity">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="theAverageDev.Commenting.FileComment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/bootstrap.php</exclude-pattern>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Generic.Commenting.Todo">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.BlockComment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.ClassComment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.DocCommentAlignment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.EmptyCatchComment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionCommentThrowTag">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.InlineComment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.PostStatementComment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.VariableComment">
        <exclude-pattern>*/src/tad/FunctionMocker/envs/WordPress/src</exclude-pattern>
    </rule>
</ruleset>
